<div class="navbar navbar-expand-sm fixed-top navbar-lewagon">
  <%= link_to '#', class: "navbar-brand" do %>
    <h2>MEDI-SAFE</h2>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if current_user.nurses.count > 1 %>
           <li class="nav-item">
            <%= link_to "Nurses", users_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown" data-behavior="notifications">
            <a class="nav-link dropdown-toggle" href="#" id="nurseLeadDropdown" role="button" data-behavior="notifications-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-bell" aria-hidden="true"></i>
              <span data-behavior="unread-count"></span>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="nurseLeadDropdown" data-behavior="notification-items">
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Patients", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Tasks", nurse_tasks_path, class: "nav-link"  %>
          </li>
          <li class="nav-item dropdown" data-behavior="notifications">
            <a class="nav-link dropdown-toggle" href="#" id="nurseDropdown" role="button" data-behavior="notifications-link" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-bell" aria-hidden="true"></i>
              <span data-behavior="unread-count"></span>
            </a>

            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="nurseDropdown" data-behavior="notification-items">
            </div>
          </li>
        <% end %>
          <li class="nav-item dropdown">
              <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Help", help_path, method: :post, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      <% else %>
        <li class="nav-item">
          <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign in", user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


